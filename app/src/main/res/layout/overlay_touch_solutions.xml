<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="fill_parent"
			  android:layout_height="match_parent"
			  android:weightSum="1"
			  android:id="@+id/solutionSelectionLayout"
			  android:orientation="vertical"
			  android:alpha="0.95">

	<ListView
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:id="@+id/lv_solutions"
		android:fastScrollEnabled="false"
		android:background="@color/background_material_dark"
		android:focusable="false"
		android:visibility="visible"
		android:layout_weight="0.925"/>

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="0.075">

		<TextView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="Selected Combo:\nnone"
			android:id="@+id/tv_currentSolution"
			android:layout_weight="0.5"
			android:background="@color/background_floating_material_dark"/>

		<Button
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="Select"
			android:id="@+id/btn_solutionGo"
			android:layout_weight="0.5"
			android:onClick="btnSolutionsSubmit"
			android:background="@color/bright_foreground_disabled_material_light"/>
	</LinearLayout>

</LinearLayout>